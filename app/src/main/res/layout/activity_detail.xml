<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/countryNameTxt"
        android:layout_width="209dp"
        android:layout_height="39dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="111dp"
        android:gravity="center"
        android:text="Country Name "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityNameTxt" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="292dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/cityNameTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_crop" />

    <TextView
        android:id="@+id/cityNameTxt"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="City Name "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/countryNameTxt"
        app:layout_constraintEnd_toEndOf="@+id/countryNameTxt"
        app:layout_constraintStart_toStartOf="@+id/countryNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>